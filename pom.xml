<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>se.j4j</groupId>
	<artifactId>projects</artifactId>
	<description>Master POM for all projects@j4j.se</description>
	<version>1</version>
	<packaging>pom</packaging>
	<url>http://www.j4j.se</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<group.id>se.j4j</group.id>

        <version.fest.assert>1.4</version.fest.assert>
        <version.findbugs.annotations>2.0.0</version.findbugs.annotations>
        <version.guava>13.0-rc1</version.guava>
        <version.jodatime>2.1</version.jodatime>
        <version.jsr305>1.3.9</version.jsr305>
        <version.junit>4.10</version.junit>

        <version.argumentparser>0.2</version.argumentparser>
        <version.collections>0.0.1-SNAPSHOT</version.collections>
        <version.guava.extensions>0.0.1-SNAPSHOT</version.guava.extensions>
        <version.numbers>0.0.1-SNAPSHOT</version.numbers>
        <version.strings>0.0.1-SNAPSHOT</version.strings>
		<version.testlib>0.0.1-SNAPSHOT</version.testlib>
		<version.texts>0.0.1-SNAPSHOT</version.texts>
	</properties>
	<modules>
    	<module>argumentparser</module>
    	<module>collections</module>
    	<module>guava-extensions</module>
        <module>numbers</module>
        <module>rfc-downloader</module>
    	<module>strings</module>
    	<module>test-lib</module>
    	<module>texts</module>
	</modules>
	<build>
	   <plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
			  	<artifactId>maven-enforcer-plugin</artifactId>
			  	<version>1.0.1</version>
			  	<executions>
			    	<execution>
			      	<id>enforce</id>
		      		<configuration>
			        	<rules>
			          		<DependencyConvergence/>
			        	</rules>
			      	</configuration>
			      	<goals>
			        	<!-- <goal>enforce</goal> TODO: m2e doesn't support this yet -->
			      	</goals>
		    	</execution>
			  </executions>
			</plugin>
			<plugin>
			    <groupId>org.apache.maven.plugins</groupId>
			    <artifactId>maven-compiler-plugin</artifactId>
			    <version>2.4</version>
			    <configuration>
					<source>1.6</source>
					<target>1.6</target>
			    </configuration>
			</plugin>
	     	<plugin>
	       		<groupId>org.apache.maven.plugins</groupId>
	       		<artifactId>maven-javadoc-plugin</artifactId>
	       		<version>2.8.1</version>
	       		<configuration>
	         		<tags>
	           		<tag>
	             		<name>formatter.on</name>
	             		<placement>X</placement>
	           		</tag>
	           			<tag>
	                		<name>formatter.off</name>
	                		<placement>X</placement>
	              		</tag>
	         		</tags>
	       		</configuration>
	     	</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
	           <groupId>junit</groupId>
	           <artifactId>junit</artifactId>
	           <version>${version.junit}</version>
	           <scope>test</scope>
	       </dependency>
	       <dependency>
	           <groupId>org.easytesting</groupId>
	           <artifactId>fest-assert</artifactId>
	           <version>${version.fest.assert}</version>
	           <scope>test</scope>
	       </dependency>
	       <dependency>
	           <groupId>com.google.code.findbugs</groupId>
	           <artifactId>jsr305</artifactId>
	           <version>${version.jsr305}</version>
	       </dependency>
	       <dependency>
	           <groupId>com.google.code.findbugs</groupId>
	           <artifactId>annotations</artifactId>
	           <version>${version.findbugs.annotations}</version>
	           <scope>test</scope>
	       </dependency>
	</dependencies>
</project>